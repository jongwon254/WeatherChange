{
    "name": "WeatherChange",
    "description": "Check the weather forecast of your current location or search for other cities. With changing weather backgrounds.",
    "version": "0.0.1",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "script.js"
        ],
        "persistent": true
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon64.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_icon": {                   
          "16": "icons/icon16.png",         
          "24": "icons/icon24.png",           
          "32": "icons/icon32.png"            
    },
        "default_title": "WeatherChange",
        "default_popup": "index.html"
    },
    "permissions": [
        "geolocation",
        "https://*/*",
        "http://*/*",
        "tabs"
    ]
}