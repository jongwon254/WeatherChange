{
    "name": "WeatherChange",
    "description": "Automatically gets the weather forecast of your current location with changing weather backgrounds. You can also search for other cities.",
    "version": "1.0.0",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "script.js"
        ],
        "persistent": true
    },
    "browser_action":{
        "default_title": "WeatherChange",
        "default_popup": "index.html"
    },
    "permissions": [
        "geolocation",
        "https://*/*",
        "http://*/*",
        "tabs"
    ]
}